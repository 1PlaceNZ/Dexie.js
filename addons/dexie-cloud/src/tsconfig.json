{
  "compilerOptions": {
    "module": "es2015",
    "declaration": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "lib": ["ES2018", "DOM"],
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "rootDir": "."
  },
  "include": [
    "**/*.ts"
  ]
}
